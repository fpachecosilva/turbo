{{ 'component-section-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding section-home-hero">
	<div class="wrapper-boxes">
		<div class="box1">

			<div class="box-left">
				{%- if section.settings.box_01_img -%}
					<img
						srcset="
							{% if section.settings.box_01_img.width >= 350 %}{{ section.settings.box_01_img | image_url: width: 350 }} 350w,{% endif %}
							{% if section.settings.box_01_img.width >= 750 %}{{ section.settings.box_01_img | image_url: width: 750 }} 750w,{% endif %}
							{% if section.settings.box_01_img.width >= 1100 %}{{ section.settings.box_01_img | image_url: width: 1100 }} 1100w,{% endif %}
							{% if section.settings.box_01_img.width >= 1500 %}{{ section.settings.box_01_img | image_url: width: 1500 }} 1500w,{% endif %}
							{% if section.settings.box_01_img.width >= 2200 %}{{ section.settings.box_01_img | image_url: width: 2200 }} 2200w,{% endif %}
							{% if section.settings.box_01_img.width >= 3000 %}{{ section.settings.box_01_img | image_url: width: 3000 }} 3000w,{% endif %}
							{{ section.settings.box_01_img | image_url }} {{ section.settings.box_01_img.width }}w
						"
						sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
						src="{{ section.settings.box_01_img | image_url: width: 1100 }}"
						loading="eager"
						fetchpriority="high"
						width="{{ section.settings.box_01_img.width }}"
						height="{{ section.settings.box_01_img.height }}"
						alt="{{ section.settings.box_01_img.alt | escape }}"
						class="small-hide"
						image_desk
					>
				{%- endif -%}
				{%- if section.settings.box_01_img_mobile -%}
					<img
						srcset="
							{% if section.settings.box_01_img_mobile.width >= 350 %}{{ section.settings.box_01_img_mobile | image_url: width: 350 }} 350w,{% endif %}
							{% if section.settings.box_01_img_mobile.width >= 750 %}{{ section.settings.box_01_img_mobile | image_url: width: 750 }} 750w,{% endif %}
							{% if section.settings.box_01_img_mobile.width >= 1100 %}{{ section.settings.box_01_img_mobile | image_url: width: 1100 }} 1100w,{% endif %}
							{% if section.settings.box_01_img_mobile.width >= 1500 %}{{ section.settings.box_01_img_mobile | image_url: width: 1500 }} 1500w,{% endif %}
							{% if section.settings.box_01_img_mobile.width >= 2200 %}{{ section.settings.box_01_img_mobile | image_url: width: 2200 }} 2200w,{% endif %}
							{% if section.settings.box_01_img_mobile.width >= 3000 %}{{ section.settings.box_01_img_mobile | image_url: width: 3000 }} 3000w,{% endif %}
							{{ section.settings.box_01_img_mobile | image_url }} {{ section.settings.box_01_img_mobile.width }}w
						"
						sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
						src="{{ section.settings.box_01_img_mobile | image_url: width: 1100 }}"
						loading="eager"
						fetchpriority="high"
						width="{{ section.settings.box_01_img_mobile.width }}"
						height="{{ section.settings.box_01_img_mobile.height }}"
						alt="{{ section.settings.box_01_img_mobile.alt | escape }}"
						class="large-up-hide"
						image_mobile
					>
				{%- endif -%}
			</div>

			<div class="box-right">
				{%- if section.settings.box_01_img_2 -%}
					<div class="wrapper-img-special">
						<img
							srcset="
								{% if section.settings.box_01_img_2.width >= 350 %}{{ section.settings.box_01_img_2 | image_url: width: 350 }} 350w,{% endif %}
								{% if section.settings.box_01_img_2.width >= 750 %}{{ section.settings.box_01_img_2 | image_url: width: 750 }} 750w,{% endif %}
								{% if section.settings.box_01_img_2.width >= 1100 %}{{ section.settings.box_01_img_2 | image_url: width: 1100 }} 1100w,{% endif %}
								{% if section.settings.box_01_img_2.width >= 1500 %}{{ section.settings.box_01_img_2 | image_url: width: 1500 }} 1500w,{% endif %}
								{% if section.settings.box_01_img_2.width >= 2200 %}{{ section.settings.box_01_img_2 | image_url: width: 2200 }} 2200w,{% endif %}
								{% if section.settings.box_01_img_2.width >= 3000 %}{{ section.settings.box_01_img_2 | image_url: width: 3000 }} 3000w,{% endif %}
								{{ section.settings.box_01_img_2 | image_url }} {{ section.settings.box_01_img_2.width }}w
							"
							sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
							src="{{ section.settings.box_01_img_2 | image_url: width: 1100 }}"
							loading="eager"
							fetchpriority="high"
							width="{{ section.settings.box_01_img_2.width }}"
							height="{{ section.settings.box_01_img_2.height }}"
							alt="{{ section.settings.box_01_img_2.alt | escape }}"												
						>
					</div>
				{%- endif -%}

				{%- if section.settings.box_01_title != blank -%}
					<div class="box-01-title titlebasker">
						{{ section.settings.box_01_title }} 
					</div>
				{%- endif -%}
				{%- if section.settings.box_01_subtitle != blank -%}
					<div class="box-01-subtitle">
						{{ section.settings.box_01_subtitle }}
					</div>
				{%- endif -%}

				<a href="{{ section.settings.box_01_btn_url }}" class="btn button button--secondary">{{ section.settings.box_01_btn_txt }}</a>
			</div>
		</div>

		<div class="box2">
			{%- if section.settings.box_02_img -%}
				<img
					srcset="
						{% if section.settings.box_02_img.width >= 350 %}{{ section.settings.box_02_img | image_url: width: 350 }} 350w,{% endif %}
						{% if section.settings.box_02_img.width >= 750 %}{{ section.settings.box_02_img | image_url: width: 750 }} 750w,{% endif %}
						{% if section.settings.box_02_img.width >= 1100 %}{{ section.settings.box_02_img | image_url: width: 1100 }} 1100w,{% endif %}
						{% if section.settings.box_02_img.width >= 1500 %}{{ section.settings.box_02_img | image_url: width: 1500 }} 1500w,{% endif %}
						{% if section.settings.box_02_img.width >= 2200 %}{{ section.settings.box_02_img | image_url: width: 2200 }} 2200w,{% endif %}
						{% if section.settings.box_02_img.width >= 3000 %}{{ section.settings.box_02_img | image_url: width: 3000 }} 3000w,{% endif %}
						{{ section.settings.box_02_img | image_url }} {{ section.settings.box_02_img.width }}w
					"
					sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
					src="{{ section.settings.box_02_img | image_url: width: 1100 }}"
					loading="eager"
					fetchpriority="high"
					width="{{ section.settings.box_02_img.width }}"
					height="{{ section.settings.box_02_img.height }}"
					alt="{{ section.settings.box_02_img.alt | escape }}"	
					class="small-hide"					
				>
			{%- endif -%}
			{%- if section.settings.box_02_img_mobile -%}
				<img
					srcset="
						{% if section.settings.box_02_img_mobile.width >= 350 %}{{ section.settings.box_02_img_mobile | image_url: width: 350 }} 350w,{% endif %}
						{% if section.settings.box_02_img_mobile.width >= 750 %}{{ section.settings.box_02_img_mobile | image_url: width: 750 }} 750w,{% endif %}
						{% if section.settings.box_02_img_mobile.width >= 1100 %}{{ section.settings.box_02_img_mobile | image_url: width: 1100 }} 1100w,{% endif %}
						{% if section.settings.box_02_img_mobile.width >= 1500 %}{{ section.settings.box_02_img_mobile | image_url: width: 1500 }} 1500w,{% endif %}
						{% if section.settings.box_02_img_mobile.width >= 2200 %}{{ section.settings.box_02_img_mobile | image_url: width: 2200 }} 2200w,{% endif %}
						{% if section.settings.box_02_img_mobile.width >= 3000 %}{{ section.settings.box_02_img_mobile | image_url: width: 3000 }} 3000w,{% endif %}
						{{ section.settings.box_02_img_mobile | image_url }} {{ section.settings.box_02_img_mobile.width }}w
					"
					sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
					src="{{ section.settings.box_02_img_mobile | image_url: width: 1100 }}"
					loading="eager"
					fetchpriority="high"
					width="{{ section.settings.box_02_img_mobile.width }}"
					height="{{ section.settings.box_02_img_mobile.height }}"
					alt="{{ section.settings.box_02_img_mobile.alt | escape }}"	
					class="large-up-hide"					
				>
			{%- endif -%}
		</div>
	</div>
</div>

{% schema %}
{
  "name": "Hero Section Home",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
		{
			"type": "header",
			"content": "Box 1"
		},
		{
			"type": "image_picker",
			"id": "box_01_img",
			"label": "Imagem"
		},
		{
			"type": "image_picker",
			"id": "box_01_img_mobile",
			"label": "Imagem (Mobile)"
		},
		{
			"type": "image_picker",
			"id": "box_01_img_2",
			"label": "Imagem de destaque"
		},
		{
			"type": "richtext",
			"id": "box_01_title",
			"label": "Título",
			"default": "<p>Não é só compra.<br>É pertencimento.</p>"
		},
		{
			"type": "richtext",
			"id": "box_01_subtitle",
			"label": "Subtítulo",
			"default": "<p>Peças únicas, experiências autênticas, você no centro de tudo.</p>"
		},
		{
			"type": "text",
			"id": "box_01_btn_txt",
			"label": "Texto do botão",
			"default": "VER COLEÇÃO"
		},
		{
			"type": "url",
			"id": "box_01_btn_url",
			"label": "Link do botão"
		},
		{
			"type": "header",
			"content": "Box 2"
		},
		{
			"type": "image_picker",
			"id": "box_02_img",
			"label": "Imagem"
		},
		{
			"type": "image_picker",
			"id": "box_02_img_mobile",
			"label": "Imagem (Mobile)"
		}
  ],
  "presets": [
    {
      "name": "Hero Section Home"      
    }
  ]
}
{% endschema %}
