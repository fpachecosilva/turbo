{{ 'component-compre-por-marcas.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding section-compre-por-marcas">	
	<div class="page-width">
		<div class="collection">
			<div class="collection__title title-wrapper title-wrapper--no-top-margin collection__title--desktop-slider">
				{%- if section.settings.title != blank -%}
					<h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
						{{ section.settings.title }}
					</h2>
				{%- endif -%}
				{%- if section.settings.show_view_all -%}
					<div class="center collection__view-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
						<a
							href="{{ section.settings.collection.url }}"
							class="link link_all"
							aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: section.settings.collection.title | escape }}"
						>
							Ver tudo
						</a>
					</div>
				{%- endif -%}
			</div>
		</div>
		<div class="wrapper-marcas">
			{% for block in section.blocks %}
				<div class="marca" {{ block.shopify_attributes }}>
					<a href="{{ block.settings.brand_url }}">
						{% if block.settings.brand_image %}
							<img
								srcset="
									{% if block.settings.brand_image.width >= 350 %}{{ block.settings.brand_image | image_url: width: 350 }} 350w,{% endif %}
									{% if block.settings.brand_image.width >= 750 %}{{ block.settings.brand_image | image_url: width: 750 }} 750w,{% endif %}
									{% if block.settings.brand_image.width >= 1100 %}{{ block.settings.brand_image | image_url: width: 1100 }} 1100w,{% endif %}
									{% if block.settings.brand_image.width >= 1500 %}{{ block.settings.brand_image | image_url: width: 1500 }} 1500w,{% endif %}
									{% if block.settings.brand_image.width >= 2200 %}{{ block.settings.brand_image | image_url: width: 2200 }} 2200w,{% endif %}
									{% if block.settings.brand_image.width >= 3000 %}{{ block.settings.brand_image | image_url: width: 3000 }} 3000w,{% endif %}
									{{ block.settings.brand_image | image_url }} {{ block.settings.brand_image.width }}w
								"
								sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw"
								src="{{ block.settings.brand_image | image_url: width: 1100 }}"
								loading="eager"
								fetchpriority="high"
								width="{{ block.settings.brand_image.width }}"
								height="{{ block.settings.brand_image.height }}"
								alt="{{ block.settings.brand_image.alt | escape }}"														
							>
						{% endif %}
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</div>

{% schema %}
{
  "name": "Compre por marcas",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
		{
			"type": "text",
			"id": "title",
			"label": "Título",
			"default": "Compre por marcas"
		},
		{
			"type": "checkbox",
			"id": "show_view_all",
			"label": "Exibir botão ver tudo",
			"default": true
		}
  ],
	"blocks": [
    {
      "type": "marca",
      "name": "Marca",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Imagem",
          "info": "Selecione uma imagem"
        },        
        {
          "type": "url",
          "id": "brand_url",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Compre por marcas"
    }
  ]
}
{% endschema %}
